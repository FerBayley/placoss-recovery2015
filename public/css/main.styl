*
	border 0
	margin 0
	padding 0
html
	height 100%
	margin 0
	padding 0
body
	font-family 'Quicksand', sans-serif
	font-size 16px
	font-weight normal
	height 100%
footer
	color #333
	bottom 0
	padding 0 0 1.5em .7em
	position absolute
	a
		color orange
		text-decoration none
	a:hover
		color #333
		text-decoration underline
h1
	margin 0
	padding 0
h2
	color #DDD
	text-align center
	padding 1em 0 0 0
h3
	color #DDD
	text-align center
p
	text-align center
nav
	font-size 1.3em
	line-height 40px
	text-align center
	width 18%
	a
		color #333
		text-decoration none
		-webkit-transition all 0.5s ease
		-moz-transition all 0.5s ease
		-o-transition all 0.5s ease
		transition all 0.5s ease
	a:hover
		background orange
		border-radius 3px
		color #FFF
		padding .3em .5em .3em .5em
		text-decoration none
		-webkit-transition all 0.5s ease
		-moz-transition all 0.5s ease
		-o-transition all 0.5s ease
		transition all 0.5s ease
.Contenedor
	background-image url('../../public/images/living.jpg')
	background-repeat no-repeat
	background-position center
	background-size cover
	height 100%
	

.Contenedor-cont
	background #000
	line-height 35px
	text-align center
	margin 5em 0 0 0
	opacity .7
	padding 0 0 1em 0
	a
		color orange
		text-decoration none
	a:hover
		color #DDD



